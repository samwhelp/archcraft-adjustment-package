## * https://wiki.archlinux.org/title/Creating_packages
## * https://wiki.archlinux.org/title/Arch_User_Repository
## * https://archlinux.org/groups/x86_64/base-devel/
## * https://wiki.archlinux.org/title/pacman
## * https://wiki.archlinux.org/title/makepkg
## * https://wiki.archlinux.org/title/PKGBUILD
## * https://wiki.archlinux.org/title/Arch_package_guidelines
##

pkgname=archcraft-modeling-openbox-with-tint
pkgver=0.1
pkgrel=1
pkgdesc="Archcraft Adjustment Openbox with Tint2"
url="https://github.com/samwhelp/archcraft-adjustment-package/tree/main/core/archcraft-modeling-sakura"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare () {
	cp -af ../asset/. "${srcdir}"
}


package () {

	##
	## Path
	##

	local sys_etc_dir_path="${pkgdir}/etc"
	local sys_share_dir_path="${pkgdir}/usr/share/${pkgname}"
	local sys_skel_dir_path="${sys_etc_dir_path}/skel"

	##
	## Prepare Dir
	##

	#mkdir -p "$sys_etc_dir_path"
	#mkdir -p "$sys_share_dir_path"


	##
	## Main Config
	##

	cp "${srcdir}/etc" "${pkgdir}/" -a

	rm "${pkgdir}/etc/skel/.config/openbox/bin/maintain-install.sh"

	return

	##
	## rc
	##

	## /etc/skel/.config/openbox/rc.xml
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/rc.xml" "${pkgdir}/etc/skel/.config/openbox/rc.xml"

	## /etc/skel/.config/openbox/menu.xml
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/menu.xml" "${pkgdir}/etc/skel/.config/openbox/menu.xml"

	## /etc/skel/.config/openbox/autostart
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/autostart" "${pkgdir}/etc/skel/.config/openbox/autostart"


	##
	## bin
	##

	## /etc/skel/.config/openbox/bin/openbox-up
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-up"

	## /etc/skel/.config/openbox/bin/openbox-up-applet
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up-applet" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-up-applet"

	## /etc/skel/.config/openbox/bin/openbox-up-compositor
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up-compositor" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-up-compositor"

	## /etc/skel/.config/openbox/bin/openbox-up-panel
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up-panel" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-up-panel"

	## /etc/skel/.config/openbox/bin/openbox-up-wallpaper
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up-wallpaper" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-up-wallpaper"

	## /etc/skel/.config/openbox/bin/openbox-up-xsettings
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up-xsettings" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-up-xsettings"

	## /etc/skel/.config/openbox/bin/openbox-wallpaper-ctrl
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-up-xsettings" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-wallpaper-ctrl"

	## /etc/skel/.config/openbox/bin/openbox-profile-ctrl
	install -Dm755 "${srcdir}/etc/skel/.config/openbox/bin/openbox-profile-ctrl" "${pkgdir}/etc/skel/.config/openbox/bin/openbox-profile-ctrl"


	##
	## ext
	##

	## /etc/skel/.config/openbox/ext/bash.sh
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/ext/bash.sh" "${pkgdir}/etc/skel/.config/openbox/ext/bash.sh"

	## /etc/skel/.config/openbox/ext/init.sh
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/ext/init.sh" "${pkgdir}/etc/skel/.config/openbox/ext/init.sh"

	## /etc/skel/.config/openbox/ext/openbox.sh
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/ext/openbox.sh" "${pkgdir}/etc/skel/.config/openbox/ext/openbox.sh"

	## /etc/skel/.config/openbox/ext/util.sh
	install -Dm644 "${srcdir}/etc/skel/.config/openbox/ext/util.sh" "${pkgdir}/etc/skel/.config/openbox/ext/util.sh"


	##
	## ext
	##


}
