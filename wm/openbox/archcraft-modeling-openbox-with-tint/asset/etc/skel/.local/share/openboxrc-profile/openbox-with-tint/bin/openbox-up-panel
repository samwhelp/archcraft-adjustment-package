#!/usr/bin/env bash


################################################################################
### Head: Note
##

## * https://github.com/samwhelp/skel-project-plan/blob/gh-pages/demo/sh/project/bin/install.sh

##
### Tail: Note
################################################################################


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH="$(cd -- "$(dirname -- "$0")" ; pwd)"
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Panel / Polybar
##

app_polybar_start () {

	util_stop_all 'polybar'

	if [ -f "$THE_STYLE_POLYBAR_CONFIG_FILE_PATH" ]; then
		is_command_exist 'polybar' && polybar top -c "$THE_STYLE_POLYBAR_CONFIG_FILE_PATH" &
		return
	fi

	is_command_exist 'polybar' && polybar top &

}

##
### Tail: Panel / Polybar
################################################################################


################################################################################
### Head: Panel / tint2
##

app_tint2_start () {

	util_stop_all 'tint2'

	if [ -f "$THE_STYLE_TINT2_CONFIG_FILE_PATH" ]; then
		is_command_exist 'tint2' && tint2 -c "$THE_STYLE_TINT2_CONFIG_FILE_PATH" &
		return
	fi

	is_command_exist 'tint2' && tint2 &

}

##
### Tail: Panel / tint2
################################################################################


################################################################################
### Head: Main
##

__main__ () {
	#app_polybar_start
	app_tint2_start
}

__main__

##
### Tail: Main
################################################################################
