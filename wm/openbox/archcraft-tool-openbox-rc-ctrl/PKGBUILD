	#install -dm755 "${pkgdir}/usr/bin"




	##
	## Main Script
	##

	## /usr/bin/openboxrc-ctrl
	install -Dm755 "${srcdir}/usr/bin/openboxrc-ctrl" "${pkgdir}/usr/bin/openboxrc-ctrl"



