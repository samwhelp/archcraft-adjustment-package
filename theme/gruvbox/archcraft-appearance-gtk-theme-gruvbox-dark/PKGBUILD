pkgname=archcraft-appearance-gtk-theme-gruvbox-dark
pkgver=0.1
pkgrel=1
pkgdesc="Archcraft Adjustment / Appearance / Gtk Theme / Gruvbox-Dark"
url="https://github.com/samwhelp/archcraft-adjustment-package/tree/main/theme/gruvbox/archcraft-appearance-gtk-theme-gruvbox-dark"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

##
## ## Source
##
## * https://github.com/jmattheis/gruvbox-dark-gtk
##
## ## Note
##
## * https://samwhelp.github.io/note-about-manjaro/read/theme/source/gruvbox.html
