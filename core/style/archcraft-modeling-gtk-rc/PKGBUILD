pkgname=archcraft-modeling-gtk-rc
pkgver=0.1
pkgrel=1
pkgdesc="Archcraft Adjustment Gtk Rc"
url="https://github.com/samwhelp/archcraft-adjustment-package/tree/main/core/style/archcraft-modeling-gtk-rc"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare () {

	return 0

	cp -af ../asset/. "${srcdir}"
}


package () {

	##
	## Path
	##

	#local sys_etc_dir_path="${pkgdir}/etc"
	#local sys_share_dir_path="${pkgdir}/usr/share/${pkgname}"
	#local sys_skel_dir_path="${sys_etc_dir_path}/skel"

	##
	## Prepare Dir
	##

	#mkdir -p "$sys_etc_dir_path"
	#mkdir -p "$sys_share_dir_path"


	#install -dm755 "${pkgdir}/etc/skel"

	# /etc/skel/.config/gtk-3.0
	install -dm755 "${pkgdir}/etc/skel/.config/gtk-3.0"

	##
	## Main Config
	##

	##
	## gruvbox-dark
	##

	cd "${pkgdir}/etc/skel"
	## /etc/skel/.gtkrc-2.0 -> ../.local/share/gtk-rc-profile/gruvbox-dark/skel/.gtkrc-2.0
	ln -sf ./.local/share/gtk-rc-profile/gruvbox-dark/skel/.gtkrc-2.0 .gtkrc-2.0

	cd "${pkgdir}/etc/skel/.config/gtk-3.0"
	## /etc/skel/.config/gtk-3.0/settings.ini -> ../.local/share/gtk-rc-profile/gruvbox-dark/skel/.config/gtk-3.0/settings.ini
	ln -sf ../../.local/share/gtk-rc-profile/gruvbox-dark/skel/.config/gtk-3.0/settings.ini settings.ini

}
