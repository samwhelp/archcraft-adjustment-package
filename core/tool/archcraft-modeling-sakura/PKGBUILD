pkgname=archcraft-modeling-sakura
pkgver=0.1
pkgrel=1
pkgdesc="Archcraft Adjustment Sakura"
url="https://github.com/samwhelp/archcraft-adjustment-package/tree/main/core/archcraft-modeling-sakura"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare () {
	cp -af ../asset/. "${srcdir}"
}


package () {

	##
	## Path
	##

	local sys_etc_dir_path="${pkgdir}/etc"
	local sys_share_dir_path="${pkgdir}/usr/share/${pkgname}"
	local sys_skel_dir_path="${sys_etc_dir_path}/skel"

	##
	## Prepare Dir
	##

	#mkdir -p "$sys_etc_dir_path"
	#mkdir -p "$sys_share_dir_path"


	##
	## Main Config
	##

	## /etc/skel/.config/sakura/sakura.conf
	install -Dm644 "${srcdir}/etc/skel/.config/sakura/sakura.conf" "${pkgdir}/etc/skel/.config/sakura/sakura.conf"



}
