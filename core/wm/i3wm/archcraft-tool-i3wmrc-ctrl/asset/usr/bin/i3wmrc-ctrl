sub_run_help () {
	main_usage "$@"
}

sub_run_version () {
	main_version "$@"
}

sub_run_self_update () {
	util_self_update "$@"
}

sub_run_self_actions () {
	util_self_actions "$@"
}



sub_run_xephyr () {
	#echo "sub_run_xephyr"
	mod_xephyr "$@"
}


sub_run_fzf () {
	#echo "sub_run_fzf"
	mod_fzf "$@"
}


sub_run_default () {
	#echo "sub_run_default"
	mod_i3wmrc_profile_default
}


sub_run_list () {
	#echo "sub_run_list"
	mod_i3wmrc_profile_list "$@"
}


sub_run_get () {
	#echo "sub_run_get"
	mod_i3wmrc_profile_get "$@"
}


sub_run_set () {
	#echo "sub_run_set"
	mod_i3wmrc_profile_set "$@"
}


sub_run_install () {
	#echo "sub_run_install"
	i3wmrc_profile_install "$@"
}


sub_run_remove () {
	#echo "sub_run_remove"
	mod_i3wmrc_profile_remove "$@"
}

